<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#17affd" />
            <stroke
                    android:width="1dp"
                    android:color="#17affd" />
            <corners
                    android:radius="5dp" />
            <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#ffffff" />
            <stroke
                    android:width="3dp"
                    android:color="#17affd" />
            <gradient  android:startColor="#17affd"
                       android:endColor="#0017affd"
                       android:gradientRadius="60%"
                       android:angle="270"/>
        </shape>
    </item>
</selector>