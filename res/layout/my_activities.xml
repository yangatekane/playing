<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/linearLayout">

        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:id="@+id/profile_categories"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:divider="?android:dividerHorizontal"
                android:background="@drawable/button_red">

            <ImageView
                    android:layout_height="match_parent"
                    style="?android:borderlessButtonStyle"
                    android:scaleType="center"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_update_wht"
                    android:contentDescription="@string/category_icon"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/driver"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/driver_details"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:id="@+id/profile_categories"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:divider="?android:dividerHorizontal"
                android:background="@drawable/button_orange">

            <ImageView
                    android:layout_height="match_parent"
                    style="?android:borderlessButtonStyle"
                    android:scaleType="center"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_update_wht"
                    android:contentDescription="@string/category_icon"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/bicker"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/bicker_description"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:id="@+id/profile_categories"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:divider="?android:dividerHorizontal"
                android:background="@drawable/button_red">

            <ImageView
                    android:layout_height="match_parent"
                    style="?android:borderlessButtonStyle"
                    android:scaleType="center"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_update_wht"
                    android:contentDescription="@string/category_icon"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:layout_weight="8">

                <TextView
                        style="?android:listSeparatorTextViewStyle"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color"
                        android:text="@string/walker"/>

                <TextView
                        style="@style/TextAppearanceSmall"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/profile_text_color_light"
                        android:text="@string/walker_description"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>